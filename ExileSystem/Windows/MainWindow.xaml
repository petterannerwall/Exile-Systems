<Window x:Class="ExileSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExileSystem"
        mc:Ignorable="d"
        Loaded="WindowLoaded"
        Title="Exile System" Height="350" Width="525">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="27*"/>
        </Grid.RowDefinitions>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_Options">
                    <MenuItem Header="_Clip Screen" Click="ClipScreen_Click" />
                    <MenuItem Header="_Settings" Click="Settings_Click"/>
                    <MenuItem Header="_Exit" />
                </MenuItem>
            </Menu>
        </DockPanel>
        <Button x:Name="startButton" Content="Start" HorizontalAlignment="Left" VerticalAlignment="Top" Width="69" Click="Button_Click" Margin="438,267,0,0" Grid.Row="1"/>
        <Image x:Name="WpfImage" HorizontalAlignment="Left" Height="257" VerticalAlignment="Top" Width="497" Margin="10,5,0,0" Grid.Row="1"/>
    </Grid>

</Window>
